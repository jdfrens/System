#!/usr/bin/perl -w

use Image::Size;

$img=shift;

if ( -f $img ) {
    ($width, $height) = imgsize($img);
    # print "{\\img \\width=$width \\height=$height \\src=$img}";
    print "<img width=\"$width\" height=\"$height\" src=\"$img\" alt=\"a picture\" />";
} else {
    print "<span>Bad file name: $img</span>";
    exit -1;
}
